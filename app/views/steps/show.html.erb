<div class="page-header">
  <h3>Step #<%= @step.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Recipe</dt>
      <dd><%= @step.recipe_id %></dd>

      <dt>Step number</dt>
      <dd><%= @step.step_number %></dd>

      <dt>Direction</dt>
      <dd><%= @step.direction %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/steps" class="btn btn-primary">
        Back
      </a>
      <a href="/steps/<%= @step.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_step/<%= @step.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
